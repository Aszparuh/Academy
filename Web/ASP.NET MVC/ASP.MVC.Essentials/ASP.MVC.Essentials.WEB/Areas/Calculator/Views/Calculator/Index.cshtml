@using ASP.MVC.Essentials.Web.Areas.Calculator.Models
@model BitCalculatorViewModel
@{
    ViewBag.Title = "Bit Calculator";
}
<br />
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4 col-md-offset-4 media">
            <div class="media-left media-middle">
                <img class="media-object" src="@Url.Content("~/Content/Images/calc-logo.png")" alt="Calculator logo">
            </div>
            <div class="media-body">
                <h2>@ViewBag.Title</h2>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-2 col-xs-offset-4">
            @Html.LabelFor(m => m.Quantity)
            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", type = "number" })
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2 col-xs-offset-4">
            @Html.LabelFor(m => m.UnitType)
            @Html.EnumDropDownListFor(m => m.UnitType, new { @class = "form-control" })
        </div>
    </div>
    <div class="row">
        <div class="col-xs-2 col-xs-offset-4">
            @Html.LabelFor(m => m.KiloValue)
            @Html.EnumDropDownListFor(m => m.KiloValue, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-xs-2 col-xs-offset-4">
            <input type="submit" value="Go" class="btn-success" />
        </div>
    </div>

    <br />
}
@foreach (var unit in Model.Units)
{
    <div class="row">
        <div class="col-xs-7 col-xs-offset-4">
            @unit.Value
            <strong>@string.Format("{0}{1}", unit.UnitType, "s")</strong>
        </div>
    </div>
}