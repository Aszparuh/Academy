@model MvcEssentials.Web.ViewModels.Partials.AsideViewModel

<div class="col-md-4">
    <div id="exTab2">
        <ul class="nav nav-tabs nav-justified">
            <li class="active">
                <a href="#1" data-toggle="tab">Most Visited</a>
            </li>
            <li>
                <a href="#2" data-toggle="tab">Recent</a>
            </li>
        </ul>

        <div class="tab-content ">
            <div class="tab-pane active" id="1">
                <div class="panel-body">
                    @foreach (var article in Model.MostVisitedArticles)
                    {
                        <div class="span">
                            <h5>
                                <a href="Details/@article.Id?name=@article.Title">@article.Title</a>
                            </h5>

                            @if (article.UserName != null)
                            {
                                <p>by @article.UserName</p>
                            }
                        </div>
                    }
                </div>
            </div>
            <div class="tab-pane" id="2">
                <div class="panel-body">
                    @foreach (var article in Model.RecentArticles)
                    {
                        <div class="span">
                            <h5>
                                <a href="Details/@article.Id?name=@article.Title">@article.Title</a>
                            </h5>

                            @if (article.UserName != null)
                            {
                                <p>by @article.UserName</p>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

</div>